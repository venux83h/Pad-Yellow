local Players = game:GetService("Players")

local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local hrp = character:WaitForChild("HumanoidRootPart")

-- Create box
local box = Instance.new("Part")
box.Name = "SupportBox"
box.Size = Vector3.new(20, 20, 20)
box.Color = Color3.fromRGB(255, 255, 0)
box.Transparency = 0.3 -- CHANGE TO 1 IF YOU WANT INVISIBLE
box.CanCollide = true
box.Anchored = false
box.Massless = true
box.Parent = character

-- Position under feet
box.CFrame = hrp.CFrame * CFrame.new(0, -12, 0)

-- Weld to HRP
local weld = Instance.new("WeldConstraint")
weld.Part0 = hrp
weld.Part1 = box
weld.Parent = box

-- Noclip body BUT keep movement
for _, part in pairs(character:GetDescendants()) do
	if part:IsA("BasePart") and part ~= box then
		part.CanCollide = false
	end
end

-- NORMAL movement & jumping
humanoid.UseJumpPower = true
humanoid.JumpPower = 50
humanoid.WalkSpeed = 16

-- Safety: prevent death
humanoid.BreakJointsOnDeath = false
humanoid.Health = humanoid.MaxHealth
